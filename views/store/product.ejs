    </div>
    <div class="productimg">
      <% selected.images.forEach((img ,index) => { %>
      <img
        width="400"
        src="/upload/<%= img  %>"
        alt=""
        srcset=""
        data-index="<%= index++ %>"
      />
      <% }) %>
    </div>
    <div class="for">
      <p><%= selected.for %></p>
    </div>
    <form action="/order/<%= selected._id %>/userId/<%= user %>" method="post">
      <div class="pnp">
        <input
          type="hidden"
          name="productName"
          value="<%= selected.productName %>"
        />
        <input type="hidden" name="price" value="<%= selected.price %>" id="" />

        <p><%= selected.productName %></p>
        <p><%= selected.price %>$</p>
        <p class="type"><%= selected.type %></p>
      </div>
      <div class="desc">
        <p><%= selected.description %></p>
        <hr class="mt-2" />
      </div>
      <ul class="colorlist mt-2">
        <% selected.colors.forEach((color) => { %>
        <input
          type="checkbox"
          name="color"
          class="ms-3"
          value="<%= color %>"
          style="
            appearance: none;
            width: 20px;
            height: 20px;
            border: 1px solid black;
            outline: none;
            border-radius: 2px;

            background-color: <%= color %>;
          "
          onchange="toggleShadow(this)"
        />

        <% }) %>
      </ul>
      <div class="sizes mt-2">
        <ul class="sizelist">
          <% selected.sizes.forEach((size) => { %>

          <label class="form-check-label ms-2">
            <input
              type="checkbox"
              value="<%= size %>"
              name="size"
              class="form-check-input ms-5"
            />
            <p class="si"><%= size %></p>
          </label>
          <% }) %>
        </ul>
      </div>
      <div class="quantity">
        <label for="" class="form-label">Qauntituy</label>
        <input
          type="number"
          name="quntity"
          maxlength="<%= selected.quantity %>"
          class="form-control"
        />
      </div>
      <button type="submit" class="cart">Add TO Cart</button>
    </form>

